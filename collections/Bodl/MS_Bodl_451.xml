               <history>
                  <origin>
                     <origDate calendar="Gregorian" when="1100">c. 1100</origDate>
                     <origPlace>
                        <country key="place_7002445">England</country>, <settlement key="place_7011375">Winchester</settlement>, <orgName key="org_304912099">Nunnaminster</orgName>
                        <!--ORIGINAL: English, Nunnaminster, Winchester-->
