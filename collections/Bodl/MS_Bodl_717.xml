                  <msItem n="1" xml:id="MS_Bodl_717-item1">
                     <author key="person_95147024">Jerome</author>
                     <title key="work_2403">Commentary on Isaiah</title>
                     <rubric>Incipit liber primus sancti Iheronimi presbiteri super Isaiam prophetam ad
                        Eustochium uirginem Christi</rubric>
                     <bibl type="commentedOn">
                        <title>Bible, Isaiah</title>
                     </bibl>
                     <note>The whole treatise in eighteen books, with prologue</note>
                     <note>At fol. 227 is a marginal note 'hue usque emendatum est'</note>
                     <textLang mainLang="la">Latin</textLang>
                  </msItem>
                  
               </msContents>
