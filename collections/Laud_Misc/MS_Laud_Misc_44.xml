                        <origDate calendar="Gregorian" notBefore="1200" notAfter="1300" resp="#DM">s. xiii</origDate>
                        <origPlace resp="#DM"><country key="place_1000070">Southern France</country></origPlace>
                        <note>(Judging from parchment, script and decoration).</note>
                     </origin>
                     <provenance notBefore="1400" notAfter="1500"><settlement key="place_7004449">Mainz</settlement>, <orgName key="org_132406363" role="fmo">Charterhouse St Michael</orgName>: late 14th-century <hi rend="italic">ex-libris</hi> inscription inscription at the lower centre of fol. 10v.</provenance>
                  </history>
               </msPart>
               
               <msPart xml:id="MS_Laud_Misc_44-part2">
                  <msIdentifier>
                     <altIdentifier type="partial">
