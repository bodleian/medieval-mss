                  <msContents>
                     <msItem class="#vitae_sanctorum" n="1" xml:id="MS_Laud_Misc_44-part1-item1">
                        <locus>(fols. 1r–10v)</locus>
                        <title key="work_12871" type="desc">Life of St James of Tarentaise</title>
                        <textLang mainLang="la">Latin</textLang>
                        <note>With prologue. The Life of Saint James of Tarentaise is complete, and divided into nine lectiones.</note>
                        <bibl>BHL 4112, BHL nov. suppl. 4112b</bibl>
                     </msItem>
                  </msContents>
                  <physDesc>
                     <p><secFol>aggregatisque discipulis</secFol> (fol. 2r)</p>
                     <objectDesc form="codex">
                        <supportDesc material="perg">
                           <support>parchment</support>
                           <extent>10 leaves 
                              <dimensions unit="mm" type="leaf">
                                 <height min="184" max="190">c.184–90</height>
                                 <width min="130" max="137">130–37</width>
                              </dimensions>
                           </extent>
                        </supportDesc>
                        <layoutDesc>
                           <layout columns="1" writtenLines="25" topLine="below">Ruling in (faint) lead point, one column of 25 lines, below top line.
                              Ruled space
                              <dimensions unit="mm" type="ruled">
                                 <height min="135" max="139">c.135–39</height>
                                 <width min="80" max="88">80–88</width>
                              </dimensions>
                           </layout>
                        </layoutDesc>
                     </objectDesc>
                     <handDesc>
                        <handNote script="textualisSouthern">Southern French textualis by a single hand.</handNote>
                     </handDesc>
                     <decoDesc>
                        <decoNote type="decInit">Scribal initials alternate red and blue, mostly decorated with fine lines.</decoNote>
                        <decoNote type="lineFill">Line-fillers.</decoNote>
                        <decoNote type="rubrication">Scribal red rubrics.</decoNote>
                     </decoDesc>
                  </physDesc>
